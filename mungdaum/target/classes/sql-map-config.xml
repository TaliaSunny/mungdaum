<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
	<typeAliases>
		<typeAlias alias="board"
			type="com.company.mybatis.board.BoardVO" />
	</typeAliases>
	<environments default="development">
		<!-- environments: 환경 property : 키 / 값 -->
		<environment id="development">
			<transactionManager type="JDBC" />
			<dataSource type="POOLED">
				<property name="driver" value="org.h2.Driver" /> <!-- 키 : 값 -->
				<property name="url" value="jdbc:h2:tcp://localhost/~/test" />
				<property name="username" value="sa" />
				<property name="password" value="" />
			</dataSource>
		</environment>
	</environments>
	<mappers>
		<mapper resource="mappings/board-mapping.xml" />
		<!-- 자원이 어디에 있는가? 자바 객체와 연결할 자바 객체의 resource 파일의 위치는 여기에 있다라는 의미이다. mapper 
			연결 시켜주는 사람 mappings 폴더의 board-mapping 을 제시해주는것이다. -->
	</mappers>
</configuration>